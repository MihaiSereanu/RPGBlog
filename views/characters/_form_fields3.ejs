<div class="form-group">
  <label for="name">Name</label>
  <input
    required
    value="<%= character.name %>"
    type="text"
    name="name"
    id="name"
    class="form-control"
  />
</div>

<div class="form-group">
  <label for="name">Title</label>
  <input
    value="<%= character.title %>"
    type="text"
    name="title"
    id="title"
    class="form-control"
  />
</div>

<div class="form-group">
  <label for="image">Avatar</label>
  <input type="file" name="image" class="filepond" />
</div>

<div class="form-group">
  <label for="description">Description</label>
  <textarea required name="description" id="description" class="form-control">
<%= character.description %></textarea
  >
</div>

<div class="form-group">
  <label for="relationship">Stance</label>
  <input
    value="<%= character.relationship %>"
    type="text"
    name="relationship"
    id="relationship"
    placeholder="Friendly/Hostile.."
    class="form-control"
  />
</div>

<div class="form-group">
  <label for="condition">Condition</label>
  <input
    value="<%= character.condition %>"
    type="text"
    name="condition"
    id="condition"
    placeholder="Alive/Dead.."
    class="form-control"
  />
</div>

<div class="form-group">
  <label for="markdown">Markdown</label>
  <textarea
    required
    name="markdown"
    id="markdown"
    class="form-control"
    style="height: 400px; width: 350px;"
  >
<%= character.markdown %></textarea
  >
</div>

<div class="top_content">
  <h1 class="section_title centered">Characters</h1>
  <a href="/characters/new" class="main_button darkened">New Character</a>
</div>
<div class="main_area">
  <div class="grid_area">
    <% characters.forEach(character => { %>
    <div class="wrapper_card">
      <div class="card">
        <div class="additional">
          <div class="user-card">
            <div class="image-responsive">
              <img height="150" width="100" src="<%= character.imagePath %>" />
            </div>
            <div class="name">
              <%= character.title %>
            </div>
          </div>
          <div class="more-info">
            <h1 style="margin-left: 1rem;"><%= character.name %></h1>
            <div class="description"><%= character.description %></div>
            <div class="stats">
              <div>
                <div class="title">Stance</div>
                <div class="value"><%= character.relationship %></div>
              </div>
              <div>
                <div class="title">Condition</div>
                <div class="value"><%= character.condition %></div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="button_area">
        <a href="characters/<%= character.slug %>" class="sub_button">View</a>
        <a href="characters/edit/<%= character.id %>" class="sub_button"
          >Edit</a
        >
        <form
          action="/characters/<%= character.id %>?_method=DELETE"
          method="POST"
        >
          <button type="submit" class="sub_button">Delete</button>
        </form>
      </div>
    </div>
    <% }) %>
  </div>
</div>

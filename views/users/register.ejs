<div class="main_area">
  <div
    class="button_area"
    style="flex-direction: column; align-items: stretch;"
  >
    <%- include('../partials/userError.ejs') %>
  </div>
  <form action="/users/register" method="POST">
    <div class="form-group">
      <label for="username">Username</label>
      <input
        required
        value="<%= typeof username != 'undefined' ? username : '' %>"
        type="text"
        name="username"
        id="username"
        autocomplete="new-password"
        class="form-control"
      />
    </div>

    <div class="form-group">
      <label for="email">Email</label>
      <input
        required
        value="<%= typeof email != 'undefined' ? email : '' %>"
        type="text"
        name="email"
        id="email"
        autocomplete="new-password"
        class="form-control"
      />
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input
        required
        value="<%= typeof password != 'undefined' ? password : '' %>"
        type="text"
        name="password"
        id="password"
        class="form-control"
      />
    </div>
    <div class="button_area" style="width: 230px;">
      <button type="submit" class="main_button" style="padding: 0.2em;">
        Register
      </button>
      <a href="/" class="main_button" style="padding: 0.2em;">Cancel</a>
    </div>
  </form>
</div>
